<div class="col-md-12">
  <h1 class="text-center">我参加的群组</h1>

  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Description</th>
        <th>Post Count</th>
        <th>Created Time</th>
    </thead>
    <tbody>
      <% @groups.each_with_index do |group, index| %>
        <tr>
          <td><%= index += 1 %></td>
          <td><%= link_to group.title, group_path(group) %></td>
          <td><%= render_group_description(group) %></td>
          <td><%= group.posts.count %></td>
          <td><%= group.updated_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
