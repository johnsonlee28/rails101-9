<div class="col-md-4 col-md-offset-4">

  <h1>发表内容</h1>
  <hr>
  <%= simple_form_for [@group,@post] do |f| %>
    <div class="form-group">
      <%= f.input :content, :class => "form-control" %>
    </div>
    <div class="form-group">
        <%= f.submit "Submit", disable_with: "Submiting...", class:"btn btn-primary" %>
    </div>
  <% end %>

</div>
